pipeline {
    agent {
        label 'docker'
    } 
    environment {
        ANDROID_SDK_ROOT = tool name: 'androidSdk'
    }
    tools {
       gradle "gradle562"
   }
    stages
    {

        stage("Build")
        {
            steps{
                sh '''gradle --version'''
                sh './gradlew clean' //run a gradle task
                echo "The build stage passed..."
            }
        }
        stage("test") {
            steps{
                echo "The test stage passed..."
            }
        }
    }
}