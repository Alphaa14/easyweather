pipeline {
    agent {
        label 'master'
    } 
    environment {
        ANDROID_HOME = tool name: 'androidSdk'
    }
    tools {
       gradle "562"
   }
    stages
    {

        stage("Build")
        {
            steps{
                sh '''gradle --version'''
                // sh '''./gradlew build clean --stacktrace'''
                sh './gradlew clean test --no-daemon' //run a gradle task
                echo "The build stage passed..."
            }
        }
        stage("test") {
            steps{
                echo "The test stage passed..."
            }
        }
    }
}